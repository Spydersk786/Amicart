<% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show mx-auto p-2" role="alert">
        <p class="mb-0"><%= success %></p>
        <button type="button" class="btn-close px-2 pu-3 pb-2" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show mx-auto p-2" role="alert">
        <p class="mb-0"><%= error %></p>
        <button type="button" class="btn-close px-2 pu-3 pb-2" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (info && info.length) { %>
    <div class="alert alert-info alert-dismissible fade show mx-auto p-2" role="alert">
        <p class="mb-0"><%= info %></p>
        <button type="button" class="btn-close px-2 pu-3 pb-2" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
