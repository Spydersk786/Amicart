<%layout('layouts/boilerplate')%>

<form action="/editUser" class="d-flex" method="GET">
    <input class="form-control me-2" type="search" placeholder="Search" name="username" aria-label="Search" value="<%= username %>">
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>

<div class="list-group mt-3">
    <% users.forEach(user => { %>
        <div class="list-group-item list-group-item-action mb-3 p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">Username: <%= user.username %></h5>
                    <p class="mb-1">Email: <%= user.email %></p>
                    <form action="/<%= user._id %>?_method=PUT" method="POST" class="d-flex align-items-center">
                        <label for="role-<%= user._id %>" class="me-2 mb-0">Role:</label>
                        <select name="role" id="role-<%= user._id %>" class="form-select me-2">
                            <option value="customer" <%= user.role === 'customer' ? 'selected' : '' %>>Customer</option>
                            <option value="dealer" <%= user.role === 'dealer' ? 'selected' : '' %>>Dealer</option>
                            <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                        </select>
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </form>
                </div>
                <div>
                    <form action="/<%= user._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </div>
            </div>
        </div>
    <% }) %>
</div>
</div>